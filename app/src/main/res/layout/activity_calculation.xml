<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lamthai.mathapp.Calculation">
    <TextView
        android:id="@+id/st_info"
        android:gravity="center"
        android:hint="Student info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_chooselv"
            android:text="Choose your level:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:layout_marginBottom="10dp"
                android:id="@+id/spn_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Spinner>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:textColor="@color/red"
        android:id="@+id/tv_chooseoptor"
        android:text="Choose an operator:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_add"
            android:text="+"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_sub"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_mul"
            android:text="*"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_div"
            android:text="/"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@+id/tv_number1"
            android:layout_marginLeft="16dp"
            android:background="@color/lightgey"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_operator"
            android:layout_marginLeft="16dp"
            android:background="@color/lightgey"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@+id/tv_number2"
            android:layout_marginLeft="16dp"
            android:background="@color/lightgey"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:text="="
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@+id/tv_result"
            android:background="@color/lightgey"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_oak">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/resize" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="63dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
            android:id="@+id/btn_0"
            android:textStyle="bold"
            android:text="0"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
                <Button
            android:id="@+id/btn_1"
            android:textStyle="bold"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
                <Button
            android:id="@+id/btn_2"
            android:textStyle="bold"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
            android:id="@+id/btn_3"
            android:textStyle="bold"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
                <Button
            android:id="@+id/btn_4"
            android:textStyle="bold"
            android:text="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
                <Button
            android:id="@+id/btn_5"
            android:textStyle="bold"
            android:text="5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_6"
                    android:textStyle="bold"
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_7"
                    android:textStyle="bold"
                    android:text="7"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_8"
                    android:textStyle="bold"
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_9"
                    android:textStyle="bold"
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_C"
                android:textStyle="bold"
                android:text="-"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_back"
                android:textStyle="bold"
                android:text="Back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_exit"
            android:text="Exit"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_next"
            android:text="Next"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_enter"
            android:text="Enter"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lb_attempt"
            android:textStyle="bold"
            android:text="Attempt:"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lb_correct"
            android:textStyle="bold"
            android:text="Correct:"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lb_accurate"
            android:textStyle="bold"
            android:text="Accurate:"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_attempt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_correct"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_accurate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
